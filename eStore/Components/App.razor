<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="eStore.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <component type="typeof(App)" render-mode="InteractiveServer" />
    
    <!-- Bootstrap JavaScript Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
    
    <script>
        // Initialize Bootstrap dropdowns after Blazor loads
        window.initializeDropdowns = () => {
            const dropdownToggleList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'));
            dropdownToggleList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl);
            });
        };
        
        // Auto-initialize dropdowns when page loads
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(initializeDropdowns, 100);
        });
        
        // Re-initialize after Blazor re-renders
        window.addEventListener('load', function() {
            setTimeout(initializeDropdowns, 200);
        });
    </script>

</body>

</html>
